{
  "name": "musicoin-wallet",
  "description": "Official Musicoin desktop application.",
  "version": "1.5.0",
  "license": "MIT",
  "private": false,
  "node-main": "./hub/msc.js",
  "main": "./interface/index.html",
  "window": {
    "title": "Musicoin Desktop",
    "width": 1000,
    "min_width": 1000,
    "height": 600,
    "min_height": 600,
    "resizeable": true
  },
  "webkit": {
    "plugin": true,
    "page-cache": true
  },
  "build": {
    "appId": "org.musicoin.app.desktop",
    "nwVersion": "0.30.5",
    "nwFlavor": "normal",
    "output": "./dist",
    "ffmpegIntegration": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Musicoin/desktop.git"
  },
  "bugs": "https://github.com/Musicoin/desktop/issues",
  "dependencies": {
    "bluebird": "~3.5.1",
    "ethereum-blockies": "github:ethereum/blockies",
    "ethers": "~3.0.17",
    "fs-extra": "~5.0.0",
    "fs-finder": "~1.8.1",
    "interface": "github:etaletai13/desktop-interface#06-06-18",
    "jsqr": "~1.0.4",
    "musicoin-daemon": "github:etaletai13/gmc-node-modules",
    "musicoin-dmg": "github:etaletai13/musicoin-dmg",
    "ntp-client": "~0.5.3",
    "nwjs-builder-phoenix": "^1.14.6",
    "pngjs": "~3.3.2",
    "qrcode": "~1.2.0",
    "request": "~2.85.0",
    "request-promise-native": "~1.0.5",
    "web3": "github:musicoin/web3.js",
    "y18n": "~4.0.0",
    "zxcvbn": "~4.4.2"
  },
  "scripts": {
    "preinstall": "rm -rf {./bin,./dist,./interface,./node_modules}",
    "debug": "./node_modules/.bin/run --x64 ./",
    "test": "yarn build-windows && yarn build-linux && yarn build-mac",
    "build-windows": "./node_modules/.bin/build --tasks win-x64 --miror https://dl.nwjs.io/ ./", 
    "build-linux": "./node_modules/.bin/.build --tasks linux-x64 --mirror http://dl.nwjs.io/ ./",
    "build-mac": "./node_modules/.bin/build --tasks mac-x64 --mirror https://dl.nwjs.io/",
    "ux-copy": "cp -r ./node_modules/interface ./interface && rm -f ./interface/package.json",
    "gmc-copy": "mkdir -p ./bin/gmc && cp -r ./node_modules/musicoin-daemon/bin/* ./bin/gmc/",
    "prepare": "yarn gmc-copy & yarn ux-copy",
    "postinstall": "rm -rf {./interface/node_modules,./node_modules/interface,./node_modules/musicoin-daemon,./node_modules/musicoin-dmg,./node_modules/nwjs-builder-phoenix"
  },
  "devDependencies": {
    "7zip-bin-mac": "^1.0.1"
  }
}
