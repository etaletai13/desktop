{
  "name": "musicoin-wallet",
  "description": "Official Musicoin desktop application.",
  "version": "1.5.0",
  "license": "MIT",
  "private": false,
  "node-main": "./hub/msc.js",
  "main": "./interface/index.html",
  "window": {
    "title": "Musicoin Desktop",
    "width": 1000,
    "min_width": 1000,
    "height": 600,
    "min_height": 600,
    "resizeable": true
  },
  "webkit": {
    "plugin": true,
    "page-cache": true
  },
  "build": {
    "appId": "org.musicoin.app.desktop",
    "nwVersion": "0.30.5",
    "nwFlavor": "normal",
    "output": "./dist",
    "ffmpegIntegration": true,
    "files": [
      "bootnodes.json",
      "package.json",
      "bin/",
      "facade/",
      "hub/",
      "interface/",
      "node_modules/"
    ],
    "excludes": [
      "node_modules/interface",
      "node_modules/nwjs-builder-phoenix",
      "node_modules/musicoin-daemon",
      "*.md"
    ],
    "targets": [
      "zip","nsis7z"
    ],
    "mac": {
      "displayName": "Musicoin Desktop",
      "copyright": "Musicoin"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Musicoin/desktop.git"
  },
  "bugs": "https://github.com/Musicoin/desktop/issues",
  "dependencies": {
    "bluebird": "~3.5.1",
    "ethereum-blockies": "github:ethereum/blockies",
    "ethers": "~3.0.17",
    "fs-extra": "~6.0.1",
    "fs-finder": "~1.8.1",
    "interface": "../desktop-interface",
    "jsqr": "~1.0.4",
    "musicoin-daemon": "github:etaletai13/gmc-node-modules",
    "ntp-client": "",
    "pngjs": "~3.3.2",
    "qrcode": "~1.2.0",
    "request": "~2.87.0",
    "request-promise-native": "~1.0.5",
    "web3": "github:Musicoin/web3.js",
    "y18n": "~4.0.0",
    "zxcvbn": "~4.4.2"
  },
  "scripts": {
    "build-linux": "yarn run build --tasks linux-x86,linux-x64 --mirror http://dl.nwjs.io/ ./",
    "build-mac": "yarn run build --tasks mac-x64 --mirror https://dl.nwjs.io/ ./",
    "build-windows": "yarn run build --tasks win-x86,win-x64 --miror https://dl.nwjs.io/ ./",
    "cleanup": "rm -rf node_modules",
    "copy-gmc": "mkdir -p ./bin/gmc && cp -r ./node_modules/musicoin-daemon/bin/* ./bin/gmc/",
    "copy-ux": "cp -r ./node_modules/interface ./interface",
    "debug": "yarn run run ./",
    "prepare": "rm -rf {./interface/package.json,./interface/node_modules}",
    "postinstall": "(yarn copy-gmc & yarn copy-ux)",
    "preinstall": "rm -rf {./bin,./dist,./interface}",
    "test": "echo 'Placeholder'"
  },
  "devDependencies": {
    "7zip-bin-mac": "~1.0.1",
    "@morhaus/nwjs-builder-phoenix": "~1.15.0"
  }
}
