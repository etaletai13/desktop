{
  "name": "musicoin-wallet",
  "version": "1.5.0",
  "license": "MIT",
  "node-main": "./hub/msc.js",
  "main": "./interface/index.html",
  "window": {
    "title": "Musicoin Desktop",
    "icon": "./favicon.png",
    "width": 1000,
    "min_width": 1000,
    "height": 600,
    "min_height": 600,
    "resizeable": true
  },
  "webkit": {
    "plugin": true,
    "page-cache": true
  },
  "build": {
    "appId": "org.musicoin.app.desktop",
    "nwVersion": "0.31.0",
    "nwFlavor": "normal",
    "output": "dist",
    "exlcude": [
      "./*.md",
      "./local",
      "./interface/package.json"
    ],
    "ffmpegIntegration": true,
    "strippedProperties": [
      "build",
      "scripts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Musicoin/desktop.git"
  },
  "bugs": "https://github.com/Musicoin/desktop/issues",
  "dependencies": {
    "bluebird": "~3.5.1",
    "ethereum-blockies": "github:ethereum/blockies",
    "ethers": "~3.0.17",
    "fs-extra": "~5.0.0",
    "fs-finder": "~1.8.1",
    "jsqr": "~1.0.4",
    "ntp-client": "~0.5.3",
    "nwjs-builder": "~1.14.0",
    "pngjs": "~3.3.2",
    "qrcode": "~1.2.0",
    "request": "~2.85.0",
    "request-promise-native": "~1.0.5",
    "web3": "github:musicoin/web3.js",
    "y18n": "~4.0.0",
    "zxcvbn": "~4.4.2"
  },
  "engines": {
    "node": ">=9.0.0",
    "yarn": ">=1.7.0"
  },
  "scripts": {
    "ux-copy": "cp -r ./node_modules/interface ./interface && rm -f ./interface/package.json",
    "gmc-copy": "mkdir -p ./bin/gmc && cp -r ./node_modules/musicoin-daemon/bin/gmc* ./bin/gmc/",
    "clean": "rm -rf ./{bin,dist,interface,node_modules,*.log}",
    "prepare": "yarn ux-copy & yarn gmc-copy",
    "postinstall": "yarn build && yarn test",
    "build": "./node_modules/.bin/nwb nwbuild ./",
    "debug": "./node_modules/.bin/nwb nwbuild -r ./",
    "test": "echo 'TODO: WRITE TESTS'"
  },
  "devDependencies": {
    "musicoin-daemon": "github:Musicoin/gmc-node-modules#fixup-package-scripts",
    "interface": "github:Musicoin/gmc-node-modules#fixup-package-scripts"
  }
}
