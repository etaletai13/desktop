{
  "name": "musicoin-wallet",
  "description": "Official Musicoin desktop application.",
  "version": "1.5.0",
  "license": "MIT",
  "private": false,
  "node-main": "./hub/msc.js",
  "main": "./interface/index.html",
  "window": {
    "title": "Musicoin Desktop",
    "width": 1000,
    "min_width": 1000,
    "height": 600,
    "min_height": 600,
    "resizeable": true
  },
  "webkit": {
    "plugin": true,
    "page-cache": true
  },
  "build": {
    "appId": "org.musicoin.app.desktop",
    "nwVersion": "0.31.0",
    "nwFlavor": "normal",
    "output": "dist",
    "ffmpegIntegration": true,
    "targets": [
      "zip",
      "nsis7z"
    ],
    "mac": {
      "displayName": "Musicoin",
      "copyright": "Musicoin"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Musicoin/desktop.git"
  },
  "bugs": "https://github.com/Musicoin/desktop/issues",
  "dependencies": {
    "bluebird": "~3.5.1",
    "ethereum-blockies": "github:ethereum/blockies",
    "ethers": "~3.0.17",
    "fs-extra": "~6.0.1",
    "fs-finder": "~1.8.1",
    "jsqr": "~1.0.4",
    "ntp-client": "~0.5.3",
    "pngjs": "~3.3.2",
    "qrcode": "~1.2.0",
    "request": "~2.87.0",
    "request-promise-native": "~1.0.5",
    "web3": "github:Musicoin/web3.js",
    "y18n": "~4.0.0",
    "zxcvbn": "~4.4.2"
  },
  "scripts": {
    "build-lin": "yarn gmc-lin && yarn run build -l --x64 ./",
    "build-mac": "yarn gmc-win && yarn run build -m --x64 ./",
    "build-win": "yarn gmc-win && yarn run build -w --x64 ./",
    "cleanup": "rm -rf node_modules",
    "gmc-clean": "rm -rf bin/gmc && mkdir -p bin/gmc",
    "gmc-lin": "cp node_modules/.bin/gmc-linux bin/gmc/gmc",
    "gmc-mac": "cp node_modules/.bin/gmc-darwin bin/gmc/gmc",
    "gmc-win": "cp node_modules/.bin/gmc-win32 bin/gmc/gmc",
    "postinstall": "cp -r ./node_modules/interface ./interface && yarn gmc-clean && yarn build-lin && yarn gmc-clean && yarn build-mac && yarn gmc-clean && yarn build-win",
    "debug": "yarn run run ./",
    "prepare": "rm -rf {./interface/package.json,./interface/node_modules}",
    "preinstall": "rm -rf {./bin,./dist,./interface}",
    "test": "ls -a dist/"
  },
  "devDependencies": {
    "7zip-bin-mac": "~1.0.1",
    "@etaletai13/gmc-bin": "../gmc-bin",
    "interface": "github:movingelectrons/interface",
    "nwjs-builder-phoenix": "^1.14.6"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.6.0"
  }
}
