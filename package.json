{
  "name": "musicoin-wallet",
  "description": "Official Musicoin desktop application.",
  "version": "1.5.0",
  "license": "MIT",
  "private": false,
  "node-main": "./hub/msc.js",
  "main": "./interface/index.html",
  "window": {
    "title": "Musicoin Desktop",
    "width": 1000,
    "min_width": 1000,
    "height": 600,
    "min_height": 600,
    "resizeable": true
  },
  "webkit": {
    "plugin": true,
    "page-cache": true
  },
  "build": {
    "appId": "org.musicoin.app.desktop",
    "nwVersion": "0.30.5",
    "nwFlavor": "normal",
    "output": "./dist",
    "exlcude": [
      "./*.md",
      "./local",
      "./interface/node_modules",
      "./node_modules/interface",
      "./node_modules/musicoin-builder",
      "./node_modules/musicoin-daemon"
    ],
    "ffmpegIntegration": true,
    "strippedProperties": [
      "build"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Musicoin/desktop.git"
  },
  "bugs": "https://github.com/Musicoin/desktop/issues",
  "dependencies": {
    "bluebird": "~3.5.1",
    "ethereum-blockies": "github:ethereum/blockies",
    "ethers": "~3.0.17",
    "fs-extra": "~5.0.0",
    "fs-finder": "~1.8.1",
    "interface": "../desktop-interface",
    "jsqr": "~1.0.4",
    "musicoin-builder": "../musicoin-builder",
    "musicoin-daemon": "github:etaletai13/gmc-node-modules",
    "ntp-client": "~0.5.3",
    "pngjs": "~3.3.2",
    "qrcode": "~1.2.0",
    "request": "~2.85.0",
    "request-promise-native": "~1.0.5",
    "web3": "github:musicoin/web3.js",
    "y18n": "~4.0.0",
    "zxcvbn": "~4.4.2"
  },
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.7.0"
  },
  "scripts": {
    "ux-copy": "cp -r ./node_modules/interface ./interface && rm -f ./interface/package.json",
    "gmc-copy": "mkdir -p ./bin/gmc && cp -r ./node_modules/musicoin-daemon/bin/* ./bin/gmc/",
    "preinstall": "rm -rf {./interface,./bin,./node_modules/musicoin-builder}",
    "postinstall": "yarn gmc-copy & yarn ux-copy",
    "prepare": "rm -rf dist && node ./node_modules/.bin/build --tasks mac-x64 ./",
    "debug": "yarn postinstall && ./node_modules/.bin/run ./"
  },
  "devDependencies": {
    "musicoin-dmg": "github:etaletai13/musicoin-dmg"
  }
}
